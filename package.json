{
  "name": "ubophone-platform",
  "version": "1.0.0",
  "description": "Low-cost international calling platform",
  "main": "server/index.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "npm install --legacy-peer-deps && cd client && npm install --legacy-peer-deps && npm run build && cd ..",
    "build:railway": "./railway-build.sh",
    "build:nixpacks": "./nixpacks-build.sh",
    "build:separated": "./nixpacks-build-separated.sh",
    "build:production": "./build.sh",
    "install-all": "npm install && cd client && npm install",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "stripe": "^13.5.0",
    "twilio": "^4.23.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "voip",
    "calling",
    "international",
    "webrtc"
  ],
  "author": "Your Name",
  "license": "MIT"
}
