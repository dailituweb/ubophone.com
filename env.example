# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT Secret (使用强密钥确保安全性 - 请生成新的密钥)
JWT_SECRET=your_jwt_secret_key_here
JWT_ISSUER=ubophone-api
JWT_EXPIRES_IN=24h

# Twilio Configuration (for actual calling functionality)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret
TWILIO_TWIML_APP_SID=your_twilio_twiml_app_sid
TWILIO_PHONE_NUMBER=+1234567890

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Server Configuration
PORT=5001
NODE_ENV=development

# Application URL (for Twilio callbacks)
APP_URL=https://ubophone.com

# Recording Security (用于录音数据加密 - 请生成新的密钥)
RECORDING_SECRET=your_recording_encryption_secret

# Email Configuration (for password reset)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=YourAppName

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/api/auth/google/callback